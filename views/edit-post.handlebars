<article>
  <a href="/profile"> &larr; Back to profile <span class="material-symbols-outlined">account_circle</span></a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      {{post.likes_count}} <span class="material-symbols-outlined">favorite</span> 
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} <span class="material-symbols-outlined">comment</span></a>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>