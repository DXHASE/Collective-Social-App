<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
     <img class="profile-image" src="{{user.profileImage}}" /> {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>